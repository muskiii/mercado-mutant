{
  "name": "mercado-mutant",
  "version": "1.0.0",
  "description": "interview puzzle for mercadolibre",
  "main": "app.js",
  "scripts": {
    "start": "node --inspect=5858 -r ts-node/register ./src/server.ts",
    "start:watch": "nodemon",
    "build-ts": "tsc",
    "test": "jest",
    "postinstall": "npm run build-ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/muskiii/mercado-mutant.git"
  },
  "author": "jose maria fabiano",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/muskiii/mercado-mutant/issues"
  },
  "homepage": "https://github.com/muskiii/mercado-mutant#readme",
  "devDependencies": {
    "@types/compression": "0.0.36",
    "@types/cors": "^2.8.5",
    "@types/express": "^4.16.0",
    "@types/helmet": "0.0.43",
    "@types/jest": "^24.0.13",
    "@types/mongoose": "^5.3.3",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.12.12",
    "jest": "^24.8.0",
    "nodemon": "^1.18.7",
    "ts-jest": "^24.0.2",
    "typescript": "^3.2.1"
  },
  "dependencies": {
    "@types/crypto-js": "^3.1.43",
    "@types/redis": "^2.8.12",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "crypto-js": "^3.1.9-1",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "helmet": "^3.15.0",
    "mongoose": "^5.3.15",
    "morgan": "^1.9.1",
    "redis": "^2.8.0",
    "ts-node": "^8.1.0"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
